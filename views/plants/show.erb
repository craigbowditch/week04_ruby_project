<div class="cell"><div class = "card">
  <p><img class="show-image" src="<%= @plant.image %>"></p>
    <p>Name: <%= @plant.name %></p>
    <p>Latin Name: <%= @plant.latin_name %></p>
    <p>Species: <%= @plant.species().name %></p>
    <p>Description: <%= @plant.description %></p>
    <p><%= @plant.stock_quantity %> in stock</p>
    <p>Buying Cost: £<%= @plant.buying_cost %></p>
    <p>Selling Price : £<%= @plant.selling_price %></p>
      <form onsubmit = "return confirm('Are you sure you want to delete?')" action="/plant-shop/plants/<%=@plant.id%>/delete" method="post">
        <input class="myButton" type="submit" value="Delete">
      </form>
      <br>
      <form action="/plant-shop/plants/<%=@plant.id%>/edit" method="get">
        <input class="myButton" type="submit" value="edit">
      </form>
  </div>
</div>
