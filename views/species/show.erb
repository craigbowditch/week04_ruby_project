<div class="cell"><div class = "card">
  <p><img class="show-image" src="<%= @species.image %>"></p>
  <p>Name: <%= @species.name %></p>
  <p>Common Name: <%= @species.common_name %></p>
  <p>Description: <%= @species.description %></p>

  <form onsubmit = "return confirm('Are you sure you want to delete?')"action="/plant-shop/species/<%=@species.id%>/delete" method="post">
    <input class="myButton" type="submit" value="Delete">
  </form>
  <br>
  <form action="/plant-shop/species/<%=@species.id%>/edit" method="get">
    <input class="myButton" type="submit" value="edit">
  </form>

</div>
</div>
